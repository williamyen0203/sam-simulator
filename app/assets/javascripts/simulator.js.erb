$(document).ready(function(){
 $("#oreo").click(function(){
   $("#special-overlap").fadeOut("fast");
   $('<%= image_tag("oreo.png", class: "temp", id: "temp-oreo") %>').appendTo('.image-stack').animate({
     left: "575px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#sushi").click(function(){
   $("#special-overlap").fadeOut("fast");
   $('<%= image_tag("sushi-projectile.png", class: "temp", id: "temp-sushi") %>').appendTo('.image-stack').animate({
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#shumai").click(function(){
   $("#special-overlap").fadeOut("fast");
   $('<%= image_tag("shumai.png", class: "temp", id: "temp-shumai") %>').appendTo('.image-stack').animate({
     right: "490px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#cake").click(function(){
   $("#special-overlap").fadeIn("fast");
