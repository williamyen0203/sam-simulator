$(document).ready(function(){
 $("#oreo").click(function(){
   $("#special-overlap").fadeOut("fast");
   $("#xiang-overlap").fadeOut("fast");
   $('<%= image_tag("oreo.png", class: "temp", id: "temp-oreo") %>').appendTo('.image-stack').animate({
     left: "575px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#sushi").click(function(){
   $("#special-overlap").fadeOut("fast");
   $("#xiang-overlap").fadeOut("fast");
   $('<%= image_tag("sushi-projectile.png", class: "temp", id: "temp-sushi") %>').appendTo('.image-stack').animate({
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#shumai").click(function(){
   $("#special-overlap").fadeOut("fast");
   $("#xiang-overlap").fadeOut("fast");
   $('<%= image_tag("shumai.png", class: "temp", id: "temp-shumai") %>').appendTo('.image-stack').animate({
     right: "490px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#cake").click(function(){
   var today = new Date();
   var month = today.getMonth() + 1;
   var date = today.getDate();
   if (month == 12 && date == 25) {
     $("#special-overlap").fadeIn("fast");
   } else if (month == 5 && date == 19) {
     $("#xiang-overlap").fadeIn("fast");
   }
   $('<%= image_tag("cake.png", class: "temp", id: "temp-cake") %>').appendTo('.image-stack').animate({
     left: "650px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
 $("#secret").click(function(){
   $('<%= image_tag("secret.png", class: "temp", id: "temp-secret") %>').appendTo('.image-stack').animate({
     right: "470px",
     bottom: "500px"
   }, 1000, "linear", function(){
     $(this).remove();
   });
 })
});
